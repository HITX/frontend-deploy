[Service]
ExecStart=<%= @npm_dir %>/bin/npm start
Restart=always
WorkingDirectory=<%= @app_dir %>
StandardOutput=syslog
SyslogIdentifier=<%= @app_name %>
User=<%= @user %>
Group=<%= @group %>
<% @environment.each do |key, value| -%>
Environment=<%= key %>=<%= value %>
<% end -%>

[Install]
WantedBy=multi-user.target
